<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/fondo1">

    <!-- Logo en la parte superior -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Escuela Felipe Carrillo Puerto"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#E7F6F2"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lic. en Informática y Sistemas de Seguridad"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#E7F6F2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matemáticas Financieras"
        android:layout_marginTop="16dp"
        android:textColor="#E7F6F2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alumnos:"
        android:layout_marginTop="16dp"
        android:textColor="#E7F6F2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Carlos Omar Cruz Cruz\n- Randy Andreu Quijano Silva\n- Angel Oswaldo Soberanis Canche"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="#E7F6F2"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMENZAR"
            android:padding="12dp"
            android:textSize="16sp"
            android:textColor="#E7F6F2"
            android:elevation="4dp"
            android:background="@drawable/button_background"
            android:layout_marginTop="32dp"/>
    </LinearLayout>

