<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/fondo2"> <!-- Aquí se establece el fondo -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnInteresSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/luminous_border_button"
            android:padding="12dp"
            android:text="Interés Simple (I.S.)"
            android:textColor="#E0E0E0"
            android:textSize="20sp" /> <!-- Aquí se aplica el fondo personalizado -->

        <Button
            android:id="@+id/btnDescuentoSimple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/luminous_border_button"
            android:padding="12dp"
            android:text="Descuento Simple (D.S.)"
            android:textColor="#E0E0E0"
            android:textSize="20sp" /> <!-- Aquí se aplica el fondo personalizado -->

        <Button
            android:id="@+id/btnInteresCompuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/luminous_border_button"
            android:padding="12dp"
            android:text="Interés Compuesto (I.C.)"
            android:textColor="#E0E0E0"
            android:textSize="20sp" /> <!-- Aquí se aplica el fondo personalizado -->

        <Button
            android:id="@+id/btnAnualidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/luminous_border_button"
            android:padding="12dp"
            android:text="Anualidades"
            android:textColor="#E0E0E0"
            android:textSize="20sp" /> <!-- Aquí se aplica el fondo personalizado -->

        <Button
            android:id="@+id/btnAmortizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:background="@drawable/luminous_border_button"
            android:padding="12dp"
            android:text="Amortización"
            android:textColor="#E0E0E0"
            android:textSize="20sp" /> <!-- Aquí se aplica el fondo personalizado -->
    </LinearLayout>

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/luminous_border_button"
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        android:padding="12dp"/> <!-- Aquí se aplica el fondo personalizado -->
</RelativeLayout>
